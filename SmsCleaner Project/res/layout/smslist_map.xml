<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:id="@+id/sms_address" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textStyle="bold"
		android:textSize="20px" />
	<TextView android:id="@+id/sms_body" android:layout_width="280sp"
		android:layout_height="wrap_content" android:layout_below="@+id/sms_address"
		android:layout_marginLeft="2sp" android:textSize="20px" />
	<CheckBox android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true" android:layout_width="wrap_content"
		android:id="@+id/checkBox_delete"></CheckBox>
</RelativeLayout>